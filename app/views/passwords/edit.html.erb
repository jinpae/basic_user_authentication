<section id="form-wrapper">
	<header class="form-title">
		<h2>Change your password</h2>
	</header>

	<%= render 'shared/errors', object: @user,
		message: "prohibited from changing your password:" %>

	<%= form_for(@user, url: password_path(password_reset_token: @user.password_reset_token), method: :patch) do |f| %>
		<div class="form-group">
			<%= f.label :password, "New password", class: "control-label" %>
			<div>
				<%= f.password_field :password, required: true, autofocus: true, class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :password_confirmation, "Confirm new password", class: "control-label" %>
			<div>
				<%= f.password_field :password_confirmation, required: true, class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.submit "Change my password", class: "btn btn-default" %>
		</div>
	<% end %>

</section>
