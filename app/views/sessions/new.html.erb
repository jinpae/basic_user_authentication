<section id="form-wrapper">
	<header class="form-title">
		<h2>Sign in</h2>
	</header>

	<%= form_tag session_path do %>
		<div class="form-group">
			<%= label_tag :email, nil, class: "control-label" %>
			<div>
				<%= email_field_tag :email, params[:email], autofocus: true, required: true, class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= label_tag :password, nil, class: "control-label" %>
			<div>
				<%= password_field_tag :password, nil, required: true, class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<div id="remember-me-wrapper">
				<%= check_box_tag :remember_me, 1, params[:remember_me] %>
				<span>Remember me</span>
			</div>
		</div>
		<div class="form-group">
			<div>
				<%= submit_tag "Sign in", class: "btn btn-default" %>
			</div>
		</div>
		<div class="form-group">
			<div>
				<%= link_to "Forgot your password?", new_password_path %>
			</div>
		</div>
	<% end %>
</section>
